<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kin.com.kinstrgam.Camera.CameraActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextureView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/picture_preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="fitXY" />

    </FrameLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/camera_cover_color"

        android:clipChildren="false"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:focusableInTouchMode="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <ImageView
            android:id="@+id/retake_photo_button"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@xml/camera_touch_circle_selector"
            android:padding="6dp"
            android:src="@drawable/ic_retake"
            android:visibility="gone"
            tools:visibility="visible"/>


            <kin.com.kinstrgam.Util.ArcImageView
                android:id="@+id/shutter_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@xml/new_camera_shutter_circle_selector"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/switch_camera"
                android:layout_width="44dp"
                android:layout_height="44dp"

                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_switch"
                android:padding="6dp"
                android:layout_marginRight="40dp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
